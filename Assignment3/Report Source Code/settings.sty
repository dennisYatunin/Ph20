\newcommand{\@plusminus}[2]{\ooalign{\raisebox{.1\height}{$#1+$}\cr\smash{\raisebox{-.6\height}{$#1-$}}\cr}}
\newcommand{\degrees}{^{\circ}}
\newcommand{\inj}{\hookrightarrow}
\newcommand{\surj}{\twoheadrightarrow}
\newcommand{\bij}{\leftrightarrow}
\newcommand{\ihat}{\boldsymbol{\hat{\textbf{\i}}}}
\newcommand{\jhat}{\boldsymbol{\hat{\textbf{\j}}}}
\newcommand{\khat}{\boldsymbol{\hat{\textbf{k}}}}
\newcommand{\xhat}{\boldsymbol{\hat{\textbf{x}}}}
\newcommand{\yhat}{\boldsymbol{\hat{\textbf{y}}}}
\newcommand{\zhat}{\boldsymbol{\hat{\textbf{z}}}}
\newcommand{\biggg}{\bBigg@{3}}
\newcommand{\Biggg}{\bBigg@{4}}
\newcommand{\bigggl}{\mathopen\biggg}
\newcommand{\bigggm}{\mathrel\biggg}
\newcommand{\bigggr}{\mathclose\biggg}
