\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{settings}[2017/08/27 General Package for LaTeX Reports]

% Packages for encoding.
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}

% Packages for math notation.
\RequirePackage{amsmath, amssymb, amsthm}
\RequirePackage{mathtools}
\RequirePackage{bm}
\RequirePackage{xfrac}
\RequirePackage{esvect, esint}

% Packages for figures and captions.
\RequirePackage{wrapfig}
\RequirePackage[labelfont=bf, labelsep=period, margin=3.5em]{caption}
\RequirePackage{float}
\RequirePackage{graphicx}
\RequirePackage{svg}
\graphicspath{ {images/} }

% Drawing packages.
\RequirePackage{tikz}
\usetikzlibrary{positioning}
\RequirePackage{pgfplots}
\pgfplotsset{width=28em, height=15cm, compat=1.13}

% Packages for tables.
\RequirePackage{easytable}
\RequirePackage{multirow}

% Scientific notation setup.
\RequirePackage{siunitx}
\sisetup{per-mode=symbol-or-fraction, add-decimal-zero=false}

% Hyperlink setup.
\RequirePackage[colorlinks=true, linkcolor=black, urlcolor=blue]{hyperref}

% Enumeration setup.
\RequirePackage[shortlabels]{enumitem}
\setlist{label=\!\!(\alph*), parsep=\parskip, leftmargin=*}

% Arbitrary line spacing for any matrix.
\renewcommand*\env@matrix[1][\arraystretch]{
    \edef\arraystretch{#1}
    \hskip -\arraycolsep
    \let\@ifnextchar\new@ifnextchar
    \array{*\c@MaxMatrixCols c}
}

% Automatic centering of figures.
\g@addto@macro\@floatboxreset\centering

% Formatting for paragraphs.
\RequirePackage{indentfirst}
\RequirePackage{setspace}
\setlength{\parskip}{1em}

% Formatting for section titles.
\RequirePackage[explicit]{titlesec}
\RequirePackage{ulem}
\titleformat{\section}{\bfseries\large}{\thesection}{1em}{\uline{#1}\vspace{-0.5em}}
\titleformat{\subsection}{\bfseries}{\thesubsection}{1em}{#1\vspace{-0.5em}}

